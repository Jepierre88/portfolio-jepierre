// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// RESUME/CV MODELS FOR ATS-FRIENDLY PDF GENERATION
// ============================================

model Resume {
  id        String   @id @default(cuid())
  locale    String   @default("en") // "en" | "es"
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  person       Person?
  highlights   Highlight[]
  skills       Skill[]
  experiences  Experience[]
  projects     Project[]
  education    Education[]

  @@unique([locale, isActive])
}

model Person {
  id                String   @id @default(cuid())
  fullName          String
  role              String
  location          String
  email             String
  phone             String?
  website           String?
  github            String?
  linkedin          String?
  availabilityLabel String?
  shortBio          String   @db.Text
  about             String[] @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  resumeId String @unique
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)
}

model Highlight {
  id        String   @id @default(cuid())
  label     String
  value     String
  hint      String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  resumeId String
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)
}

model Skill {
  id        String   @id @default(cuid())
  name      String
  category  String   // "primary" | "secondary" | "tooling"
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  resumeId String
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)
}

model Experience {
  id        String   @id @default(cuid())
  company   String
  title     String
  location  String?
  startDate String
  endDate   String   // "Present" for current
  summary   String?  @db.Text
  bullets   String[] @db.Text
  tech      String[]
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  resumeId String
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)
}

model Project {
  id          String   @id @default(cuid())
  slug        String
  name        String
  summary     String   @db.Text
  description String?  @db.Text
  role        String?
  highlights  String[] @db.Text
  tech        String[]
  liveUrl     String?
  repoUrl     String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  resumeId String
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)
}

model Education {
  id          String   @id @default(cuid())
  institution String
  degree      String
  field       String?
  startDate   String
  endDate     String?
  description String?  @db.Text
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  resumeId String
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)
}
